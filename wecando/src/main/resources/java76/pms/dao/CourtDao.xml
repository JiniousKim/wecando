<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="java76.pms.dao.CourtDao">
  <resultMap type="Court" id="courtMap">
    <id column="court_code" property="court_code"/>
    <result column="court_cnt" property="court_cnt"/>
    <result column="court_max" property="court_max" />
    <result column="court_price" property="court_price" />
    <result column="event_code" property="event_code" />
    <result column="sch_num" property="sch_no" />
    <collection property="event" column="event_code" ofType="Event"
     javaType="Event" resultMap="eventMap"/>
    <collection property="school" column="sch_no" ofType="School"
     javaType="School" resultMap="schoolMap" />
  </resultMap>
  
  <resultMap id="schoolMap" type="school">
    <id property="sch_num" column="sch_no" />
  </resultMap>
  <resultMap id="eventMap" type="event">
    <id property="event_code" column="event_code" />
    <result property="event_name" column="event_name"/>
  </resultMap>
  
    
  <insert id="insertCourt" parameterType="map">
    insert into court(court_code, court_cnt, event_code, sch_num, court_price, court_max)
    values(#{court_code, jdbcType=VARCHAR}, #{court_cnt}, 
           #{event_code, jdbcType=VARCHAR}, #{sch_no},
           #{court_price}, #{court_max})
  </insert>
  
  <select id="courtList" parameterType="int" resultType="Court">
    select court_code as court_code,
           court_cnt  as court_cnt,
           court_price as court_price,
           court_max  as court_max,
           event.event_name as event_name
    from court join event on event.event_code = (select event_code
																		      from court
																		      where sch_num = #{sch_no})
  </select>
  
  <!-- <delete id="delete_court" parameterType="map">
    delete from court
    where 
  </delete> -->
  
</mapper>